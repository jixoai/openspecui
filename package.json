{
  "name": "openspecui-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "OpenSpec Web UI - Visual interface for spec-driven development",
  "type": "module",
  "scripts": {
    "dev": "bun run scripts/dev-tui.tsx",
    "dev:legacy": "tsx scripts/dev.ts",
    "openspecui": "pnpm --filter openspecui dev",
    "dev:server": "pnpm --filter @openspecui/server dev",
    "dev:web": "pnpm --filter @openspecui/web dev",
    "build": "pnpm run build:deps && pnpm run typecheck && pnpm run build:packages && pnpm run build:cli",
    "build:deps": "pnpm --filter @openspecui/core build && pnpm --filter @openspecui/search build && pnpm --filter @openspecui/ai-provider build",
    "build:packages": "pnpm --filter @openspecui/server build && pnpm --filter @openspecui/web build",
    "build:cli": "pnpm --filter openspecui run build:copy-web && pnpm --filter openspecui exec tsdown",
    "typecheck": "pnpm -r --parallel run typecheck",
    "tc": "pnpm -r --parallel run typecheck",
    "preview": "pnpm --filter openspecui dev",
    "lint": "oxlint packages scripts --ignore-path .gitignore",
    "lint:ci": "oxlint packages scripts --ignore-path .gitignore",
    "format": "prettier --write .",
    "format:check": "tsx scripts/format-check.ts",
    "test": "vitest",
    "test:ci": "pnpm -r --workspace-concurrency=1 --if-present run test",
    "test:browser:ci": "pnpm --filter xterm-input-panel test:browser && pnpm --filter @openspecui/web test:browser",
    "changeset:check": "node scripts/changeset-check.mjs",
    "changeset": "changeset",
    "changeversion": "bun ./scripts/changeversion-auto.ts",
    "release": "pnpm build && changeset publish",
    "openspec:check-reference": "node scripts/check-openspec-reference.mjs",
    "nix:build": "nix build --extra-experimental-features nix-command --extra-experimental-features flakes",
    "nix:run": "nix run --extra-experimental-features nix-command --extra-experimental-features flakes",
    "nix:develop": "nix develop --extra-experimental-features nix-command --extra-experimental-features flakes",
    "nix:check": "nix flake check --extra-experimental-features nix-command --extra-experimental-features flakes",
    "nix:show": "nix flake show --extra-experimental-features nix-command --extra-experimental-features flakes",
    "example:setup": "tsx scripts/setup-example.ts",
    "example:clean": "tsx scripts/setup-example.ts --clean",
    "example:dev": "pnpm example:setup && pnpm preview --dir ./example"
  },
  "keywords": [
    "openspec",
    "spec-driven",
    "ai-assisted",
    "development"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=20.19.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@opentui/core": "^0.1.79",
    "@opentui/react": "^0.1.79",
    "@types/node": "^22.10.0",
    "@xterm/headless": "6.0.0",
    "oxlint": "^1.15.0",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "react": "^19.2.0",
    "shadcn": "^3.8.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@lydell/node-pty"
    ],
    "patchedDependencies": {}
  },
  "trustedDependencies": [
    "@parcel/watcher"
  ]
}
