{
  "name": "@openspecui/server",
  "version": "1.6.0",
  "type": "module",
  "main": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --format esm --no-dts",
    "typecheck": "tsc -p tsconfig.check.json --noEmit",
    "dev": "tsx watch --include '../core/dist/**' --include '../search/dist/**' src/standalone.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@lydell/node-pty": "^1.1.0",
    "@openspecui/core": "workspace:*",
    "@openspecui/search": "workspace:*",
    "@trpc/server": "^11.0.0",
    "hono": "^4.7.3",
    "ws": "^8.18.0",
    "yaml": "^2.8.0",
    "yargs": "^18.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "@types/yargs": "^17.0.35",
    "tsdown": "^0.16.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
